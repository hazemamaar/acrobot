<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Acrobot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
    </style>

    <style name="Theme.Acrobot" parent="Base.Theme.Acrobot" />

    <style name="setup_ed_txt"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <item name="boxCornerRadiusBottomEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_7sdp</item>
<!--                 <item name="boxStrokeColor">@color/gray</item>-->
<!--                 <item name="strokeColor">@color/gray</item>-->
<!--                 <item name="strokeWidth">@dimen/_1sdp</item>-->
<!--                 <item name="boxStrokeWidth">1dp</item>-->
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="helperTextTextColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="fontFamily">@font/poppins</item>-->
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">15dp</item>
    </style>
</resources>